<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block
                    class="Magento\Customer\Block\Account\SortLinkInterface"
                    ifconfig="customer/account_information/display_hobby_section"
                    name="customer-account-navigation-hobby-section-link"
                    after="-" >
                <arguments>
                    <argument name="path" xsi:type="string">hobby</argument>
                    <argument name="label" xsi:type="string" translate="true">Hobby List</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>